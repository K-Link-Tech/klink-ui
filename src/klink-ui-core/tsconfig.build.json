{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "../../configuration/types", "../../tests"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@klink-ui/hooks": ["../klink-ui-hooks/src"],
      "@klink-ui/styles": ["../klink-ui-styles/src"],
      "@klink-ui/utils": ["../klink-ui-utils/src"],
      "@klink-ui/tests": ["../klink-ui-tests/src"]
    }
  },
  "references": [
    { "path": "../klink-ui-hooks" },
    { "path": "../klink-ui-utils" },
    { "path": "../klink-ui-styles" },
    { "path": "../klink-ui-tests" }
  ]
}
