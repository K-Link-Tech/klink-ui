{
  "extends": "../../tsconfig.base.json",
  "include": ["./src", "./types", "../../configuration/types"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts",
    "src/components/*/demos/*",
    "src/demos.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@klink-ui/core": ["../klink-ui-core/src"],
      "@klink-ui/dates": ["../klink-ui-dates/src"],
      "@klink-ui/hooks": ["../klink-ui-hooks/src"],
      "@klink-ui/form": ["../klink-ui-form/src"],
      "@klink-ui/spotlight": ["../klink-ui-spotlight/src"],
      "@klink-ui/carousel": ["../klink-ui-carousel/src"],
      "@klink-ui/prism": ["../klink-ui-prism/src"],
      "@klink-ui/dropzone": ["../klink-ui-dropzone/src"],
      "@klink-ui/ds": ["../klink-ui-ds/src"],
      "@klink-ui/notifications": ["../klink-ui-notifications/src"],
      "@klink-ui/modals": ["../klink-ui-modals/src"],
      "@klink-ui/nprogress": ["../klink-ui-nprogress/src"],
      "@klink-ui/tiptap": ["../klink-ui-tiptap/src"]
    }
  },
  "references": [
    { "path": "../klink-ui-core" },
    { "path": "../klink-ui-dates" },
    { "path": "../klink-ui-hooks" },
    { "path": "../klink-ui-spotlight" },
    { "path": "../klink-ui-carousel" },
    { "path": "../klink-ui-form" },
    { "path": "../klink-ui-prism" },
    { "path": "../klink-ui-dropzone" },
    { "path": "../klink-ui-ds" },
    { "path": "../klink-ui-notifications" },
    { "path": "../klink-ui-modals" },
    { "path": "../klink-ui-nprogress" },
    { "path": "../klink-ui-tiptap" }
  ]
}
