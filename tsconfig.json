{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/k-link-*/src",
    "src/k-link-*/demos",
    "./types",
    "./docs/src",
    "./scripts",
    "./configuration",
    "./configuration/types",
    "./tests"
  ],
  "exclude": [
    "public",
    ".cache",
    "configuration/jest",
    "configuration/storybook/main.js",
    "node_modules",
    "src/k-link-*/esm/**/*",
    "src/k-link-*/lib/**/*",
    "src/k-link-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@k-link/*": ["src/k-link-*/src"],
      "@demos/*": ["src/k-link-*/src/demos"]
    }
  }
}
