{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/klink-ui-*/src",
    "src/klink-ui-*/demos",
    "./types",
    "./docs/src",
    "./scripts",
    "./configuration",
    "./configuration/types",
    "./tests"
  ],
  "exclude": [
    "public",
    ".cache",
    "configuration/jest",
    "configuration/storybook/main.js",
    "node_modules",
    "src/klink-ui-*/esm/**/*",
    "src/klink-ui-*/lib/**/*",
    "src/klink-ui-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@klink-ui/*": ["src/klink-ui-*/src"],
      "@demos/*": ["src/klink-ui-*/src/demos"]
    }
  }
}
